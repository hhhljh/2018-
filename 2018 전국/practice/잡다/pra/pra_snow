<script type="text/javascript">
var wt = window.innerWidth;
var ht = window.innerHeight;

function SnowFall(){
	window.requestAnimationFrame(snowFall);
	var rw, rh = Math.floor(Math.random()*100) + 1;
	var snowDot = '\
	<div class="snow" width="'+rw+'+'%'" height="'+rh+'">\
	';
	setInterval(snowFall(),100)
}
	
